#include "binary_trees.h"


binary_tree_t *binary_trees_ancestor(cont binary_tree_t *first,
				     const binary_tree_t *second)
{
	binary_tree_t *mom1, *mom2;

	if (!first || !second)
		return NULL;

	if (first == second)
		return first;

	mom1 = first->parent;
	mom2 = second->parent;


	if (first == mom2 || (!mom1->parent && mom2) || !mom1)
		return binary_trees_ancestor(first, mom2);
	else if (second == mom1 || (!mom2->parent && first) || !mom2)
		return binary_trees_ancestor(second, mom1);
}
